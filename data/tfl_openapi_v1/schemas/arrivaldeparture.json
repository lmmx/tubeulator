{
  "description": "DTO to capture the prediction details",
  "type": "object",
  "properties": {
    "platformName": {
      "description": "Platform name (for bus, this is the stop letter)",
      "type": "string"
    },
    "destinationNaptanId": {
      "description": "Naptan Identifier for the prediction's destination",
      "type": "string"
    },
    "destinationName": {
      "description": "Name of the destination",
      "type": "string"
    },
    "naptanId": {
      "description": "Identifier for the prediction",
      "type": "string"
    },
    "stationName": {
      "description": "Station name",
      "type": "string"
    },
    "estimatedTimeOfArrival": {
      "format": "date-time",
      "description": "Estimated time of arrival",
      "type": "string"
    },
    "scheduledTimeOfArrival": {
      "format": "date-time",
      "description": "Estimated time of arrival",
      "type": "string"
    },
    "estimatedTimeOfDeparture": {
      "format": "date-time",
      "description": "Estimated time of arrival",
      "type": "string"
    },
    "scheduledTimeOfDeparture": {
      "format": "date-time",
      "description": "Estimated time of arrival",
      "type": "string"
    },
    "minutesAndSecondsToArrival": {
      "description": "Estimated time of arrival",
      "type": "string"
    },
    "minutesAndSecondsToDeparture": {
      "description": "Estimated time of arrival",
      "type": "string"
    },
    "cause": {
      "description": "Reason for cancellation or delay",
      "type": "string"
    },
    "departureStatus": {
      "description": "Status of departure",
      "enum": [
        "OnTime",
        "Delayed",
        "Cancelled",
        "NotStoppingAtStation"
      ],
      "type": "string"
    },
    "timing": {
      "$ref": "_definitions.json#/definitions/Tfl.Api.Presentation.Entities.PredictionTiming",
      "description": "Keep the original timestamp from MongoDb fo debugging purposes"
    }
  },
  "$schema": "http://json-schema.org/schema#"
}